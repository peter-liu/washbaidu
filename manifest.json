{
    "name": "Washbaidu",
    "description": "清除牛皮藓，营造良好网络环境",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://www.baidu.com/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "kino.png"
            ],
            "matches": [
                "https://www.baidu.com/*"
            ]
        }
    ],
    "icons": { 
	  "16" : "icons/logo16.png",
          "48" : "icons/logo48.png",
          "128": "icons/logo120.png" 
    },
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "notifications"
    ]
}
